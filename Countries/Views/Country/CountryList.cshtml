@model IEnumerable<Countries.Models.Country>

<h2>@ViewBag.Title</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">@Html.DisplayFor(m => item.Name, new { @class = "form-control" })</div>
                <div class="panel-body">
                    <div class="col-xs-12 col-md-8">
                        <div class="form-group">
                            @Html.LabelFor(m => item.Capital, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.DisplayFor(m => item.Capital, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => item.Population, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.DisplayFor(m => item.Population, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

